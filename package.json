{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "start": "nuxt dev",
    "dev": "concurrently \"pnpm run dev:db\" \"nuxt dev\"",
    "dev:db": "turso dev --db-file local.db",
    "dev:studio": "drizzle-kit studio",
    "generate": "nuxt generate",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky",
    "prepare:drizzle": "drizzle-kit generate && drizzle-kit migrate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  },
  "dependencies": {
    "@libsql/client": "^0.15.14",
    "@nuxt/eslint": "1.9.0",
    "@nuxt/icon": "2.0.0",
    "@nuxtjs/color-mode": "3.5.2",
    "@pinia/nuxt": "0.11.2",
    "better-auth": "^1.3.7",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.44.5",
    "nuxt": "^4.0.3",
    "pinia": "^3.0.3",
    "vue": "^3.5.20",
    "vue-router": "^4.5.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@tailwindcss/vite": "^4.1.12",
    "daisyui": "^5.0.54",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "tailwindcss": "^4.1.12"
  },
  "lint-staged": {
    "*": "pnpm lint"
  }
}
